{
  "compilerOptions": {
    "target": "ES2020",              // Use modern ECMAScript features for better performance
    "module": "commonjs",            // CommonJS is typical for Node.js projects
    "rootDir": "src",                // Root source directory
    "outDir": "dist",                // Output directory for build artifacts
    "declaration": true,             // Generate .d.ts declaration files
    "declarationMap": true,          // Adds source maps for declarations (great for debugging)
    "sourceMap": true,               // Adds source maps for JavaScript files
    "esModuleInterop": true,         // Enables interop between CommonJS and ES modules
    "strict": true,                  // Enforce strict type-checking options
    "skipLibCheck": true,            // Skip type checking of declaration files
    "types": ["node"]                // Include types for Node.js
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]  // Exclude generated and dependency files from the build and linting process
}